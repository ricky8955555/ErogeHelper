<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=System.Runtime">

    <system:Double x:Key="ControllerWidth">240</system:Double>
    <system:Double x:Key="MinButtonWidth">90</system:Double>
    <system:Double x:Key="MinWindowWidth">400</system:Double>
    <system:Double x:Key="ExpandedModeThresholdWidth">500</system:Double>
    <system:Double x:Key="SidePaneLength">160</system:Double>
    <system:Double x:Key="AssistiveTouchSize">55</system:Double>

    <!-- Reference
        // ModernFlyouts
        // Any Controller width: 240
        // Buttons: WidthToContent
        // SidePaneLength: 225

        // System
        // Buttons: MinWidth 90, font between horizontal edge at least 15 pixel
        // SidePaneLength: 320
        // 下拉框: 230 or 280 and bigger
        // Extra web help info: 240

        // Expanded Change width (window width)
        // System 720 -> Frame min width 400 (window min 500) 
        // ModernFlyouts 800 -> 560 (350)
    -->

</ResourceDictionary>